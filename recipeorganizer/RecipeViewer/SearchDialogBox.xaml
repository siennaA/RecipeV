<Window x:Class="RecipeViewer.SearchDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeViewer"
        mc:Ignorable="d"
        Title="Search Window" Height="117.455" Width="299.47">
    <Grid Margin="0,0,0,0">
        <TextBlock x:Name="messageTextBlock" Margin="0,0,0,0" TextWrapping="Wrap" Text="Separate keywords with commas &quot;,&quot;" VerticalAlignment="Top" Height="20" TextAlignment="Center"/>
        <TextBlock x:Name="searchTextBlock" Margin="4,23,196,0" TextWrapping="Wrap" Text="Search:" VerticalAlignment="Top" Height="20" TextAlignment="Center"/>
        <TextBox x:Name="searchInputTextBox" Height="20" Margin="0,23,23,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" HorizontalAlignment="Right" Width="176" KeyDown="OnKeyDownHandler"/>
        <Button x:Name="confirmButton" Content="Ok" HorizontalAlignment="Center" Margin="10,0,180,10" VerticalAlignment="Bottom" Width="75" Click="confirmButton_Click" KeyDown="OnKeyDownHandler"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Center" Margin="180,0,10,10" VerticalAlignment="Bottom" Width="75" Click="cancelButton_Click"/>
    </Grid>
</Window>
